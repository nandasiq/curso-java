package telas;
import java.util.Scanner;

public class TestesX {


    public class Main {
        public static void main(String[] args) {
            int A, N;

            Scanner input = new Scanner(System.in);
            A = input.nextInt();
            N = input.nextInt();
            //int soma = A;
            
            System.out.print(N % A);
            input.close();
        }
    }
}
