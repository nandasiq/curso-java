package telas;
import java.util.Scanner;

public class TestesX {



        public static void main(String[] args) {
            int A, N;

            Scanner input = new Scanner(System.in);
            A = input.nextInt();
            N = input.nextInt();

            int soma = 0;
            int multiplo = 1;
            //int i = 1;
            
            do {
                soma = soma + (A * multiplo);
                
                multiplo++;
                
            } while (multiplo <= N);
            
            System.out.print(soma);
            input.close();
        }
}
