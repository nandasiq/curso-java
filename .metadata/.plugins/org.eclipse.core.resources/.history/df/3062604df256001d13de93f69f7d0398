package telas;
import java.util.Scanner;

public class TestesX {



        public static void main(String[] args) {
            int A, N;

            Scanner input = new Scanner(System.in);
            A = input.nextInt();
            N = input.nextInt();

            int soma = A;
            int multiplo = 1;
            int i = 0;
            
            do {
                i = A * multiplo;
                soma = soma + i;
                multiplo++;
                
            } while (i <= N);
            
            System.out.print(soma);
            input.close();
        }
}
